<!DOCTYPE html>
<html>
  <%- include('./partials/_head'); %>
  <body>
    <%- include('./partials/_navbar'); %>
    <div class="main-container">
      <aside id="filtersContainer" class="aside p-2">
        <label for="quickSearch">
          Quick search
          <input
            id="inputQuickSearch"
            type="text"
            class="search-input"
            name="quickSearch"
            placeholder="Search brand..."
          />
        </label>
        <button
          id="btnAll"
          type="button"
          class="btn btn-outline-primary search-button--hidden"
        >
          Clear
        </button>
      </aside>
      <main class="main p-2">
        <h1><%= title %></h1>
      </main>
    </div>
    <script src="js/script.js"></script>
  </body>
</html>
